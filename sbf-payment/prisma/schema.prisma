// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
}

model Facility {
  id           String       @id @default(cuid())
  name         String
  description  String?
  studentPrice Float        @default(0) // Öğrenci ücreti
  staffPrice   Float        @default(0) // Personel ücreti
  isActive     Boolean      @default(true)
  submissions  Submission[]
  createdAt    DateTime     @default(now())
}

model FormField {
  id          String   @id @default(cuid())
  name        String
  label       String
  type        String   // text, number, file, select, date
  required    Boolean  @default(true)
  options     String?  // JSON for select options
  order       Int
  isActive    Boolean  @default(true)
  isSystem    Boolean  @default(false) // T.C., Ad Soyad gibi sistem alanları
  createdAt   DateTime @default(now())
}

model Submission {
  id          String   @id @default(cuid())
  tcNo        String
  fullName    String
  email       String
  address     String
  studentNo   String
  userType    String   @default("ogrenci") // ogrenci veya personel
  facilityId  String
  facility    Facility @relation(fields: [facilityId], references: [id])
  receiptPath String   // Dekont dosya yolu
  extraData   String?  // Dinamik alanlar için JSON
  status      String   @default("pending") // pending, approved, rejected
  notes       String?
  consents    DocumentConsent[] // PDF onay kayıtları
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// PDF Döküman Onay Kaydı (Dijital İmza)
model DocumentConsent {
  id           String     @id @default(cuid())
  submissionId String
  submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  documentName String     // PDF dosya adı
  ipAddress    String     // Kullanıcının IP adresi
  userAgent    String?    // Browser bilgisi (opsiyonel)
  consentAt    DateTime   @default(now()) // Onay zamanı
}

// Site Ayarları (Başvuru Kuralları, Kullanım Şartları vb.)
model SiteSettings {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String   // JSON veya text
  description String?
  updatedAt   DateTime @updatedAt
}

// Onay PDF Dökümanları (Admin'den yönetilebilir)
model ConsentDocument {
  id        String   @id @default(cuid())
  name      String   // Döküman adı (onay kaydında kullanılır)
  title     String   // Kullanıcıya gösterilen başlık
  filePath  String   // /documents/... yolu
  order     Int      @default(0) // Gösterim sırası
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
